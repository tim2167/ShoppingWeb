
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success"{{#if noMessages}}hidden{{/if}}>
            {{ successMsg}}
        </div>
    </div>
</div>
{{# each products }}
    <div class="row">
    {{# each this}}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src= "{{this.imagePath}} " alt="..." class = "img=responsive">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class = "description">{{this.description}}.</p>
                    <div class ="clearfix">
                        <div class="price pull-right">${{this.price}}</div>
                        <form action="/addCart/{{this.id}}/{{this.identifier}}" method="get">
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type ="number" min ="1" id="amount" name="amount" placeholder="1" value = "1" class="form-control"></input>
                            </div>
                            <button type="submit" class="btn btn-primary">Purchase</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        </div>


{{/each}}

